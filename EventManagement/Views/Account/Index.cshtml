@model LoginViewModel
@{
    Layout = null;
    ViewData["Title"] = "Log in";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Event Management | Log in</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&amp;display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="/themeAssets/plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="/themeAssets/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="/themeAssets/dist/css/adminlte.min.css">
    <style>
        body {
            margin: 0;  
            padding: 0;
            position: relative;
            background-color: #121212; /* Dark background color */
            color: #ffffff; /* White text color */
            font-family: 'Source Sans Pro', sans-serif;
            background-image=
        }

        .login-page {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background: linear-gradient(135deg, rgba(0, 0, 0, 0.8), rgba(18, 18, 18, 0.9)); /* Gradient overlay */
        }

        .login-box {
            width: 360px;
            margin: 0 auto;
        }

        .card {
            background-color: #1e1e1e; /* Dark card background */
            border: none;
            border-radius: 10px; /* Rounded corners */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5); /* Subtle shadow */
        }

        .card-header {
            background-color: #292929; /* Darker header */
            border-bottom: none;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
            padding: 20px;
            text-align: center;
        }

            .card-header a {
                color: #ffffff; /* White text color */
                font-size: 24px;
                font-weight: 700;
                text-decoration: none;
            }

        .card-body {
            color: #b0b0b0; /* Slightly lighter text color */
            padding: 20px;
        }

        .form-control {
            background-color: #2c2c2c; /* Dark input background */
            border: 1px solid #444444; /* Border color */
            color: #ffffff; /* White text color */
            border-radius: 5px;
        }

        .input-group-text {
            background-color: #3a3a3a; /* Darker input group background */
            border: 1px solid #444444; /* Border color */
            color: #ffffff; /* White text color */
            border-radius: 0 5px 5px 0;
        }

        .btn-primary {
            background-color: #4a4a4a; /* Dark button background */
            border-color: #5a5a5a; /* Border color */
            border-radius: 5px;
            transition: background-color 0.3s, border-color 0.3s;
        }

            .btn-primary:hover {
                background-color: #5a5a5a; /* Hover color */
                border-color: #6a6a6a; /* Border color on hover */
            }

        .login-box-msg {
            color: #d0d0d0; /* Slightly lighter text color */
            margin-bottom: 20px;
            text-align: center;
            font-size: 16px;
        }

        .input-group {
            margin-bottom: 15px;
        }

        .card-body .btn {
            padding: 10px 0;
        }
    </style>
</head>
<body class="login-page" style="background-image=url('/img/bg.jpg')">
    <div class="login-box">
        <div class="card card-outline card-primary">
            <div class="card-header">
                <a href="/" class="h1">Event Management</a>
            </div>
            <div class="card-body">
                <p class="login-box-msg">Sign in to start your session</p>

                <form asp-action="Login" asp-controller="Account" method="post">
                    <div class="input-group">
                        <input type="tel" asp-for="Mobile" class="form-control" required title="Mobile required!" placeholder="Mobile Number">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-mobile-alt"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group">
                        <input type="password" asp-for="Password" class="form-control" required title="Password required!" placeholder="Password">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 mt-4">
                        <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- jQuery -->
    <script src="/themeAssets/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="/themeAssets/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="/themeAssets/dist/js/adminlte.min.js"></script>
</body>
</html>
